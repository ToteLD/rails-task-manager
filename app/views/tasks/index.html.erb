<h1>My Tasks</h1>

<ul>
  <% @tasks.each do |task| %>
  <li>
    <%= task.completed %> : <%= task.title %>
    <%= link_to "View details", task_path(task) %>
    <%= link_to "Delete task", task_path(task), method: :delete, data: { confirm: "Are you sure ?" } %>
  </li>
  <% end %>
</ul>

<%= link_to "Add a new task", new_task_path %>
